{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "target": "es6",
    "noImplicitAny": true,
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "pretty": true,
    "baseUrl": ".",
    "lib": ["esnext", "dom"],
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*", "types/**/*"],
  "baseUrl": "types",
  "typeRoots": ["types"]
}
